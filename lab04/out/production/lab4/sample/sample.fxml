<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="10" vgap="10">
    <Text text = "Register form"
          GridPane.columnIndex="0" GridPane.rowIndex = "0" GridPane.columnSpan="1"  ></Text>

    <Label text = "Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id = "username"
            GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text = "Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <PasswordField fx:id = "passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text = "Full name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id = "fullName"
            GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text = "Email address:"
           GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <TextField fx:id="email"
            GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text = "Phone number:"
           GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <TextField fx:id="phoneNo"
            GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text = "Date of birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="6" />

    <DatePicker fx:id="bornDate"
                GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <HBox spacing = "20" alignment="bottom_left"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
          <Button text = "Register"
                  onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="8" />
</GridPane>