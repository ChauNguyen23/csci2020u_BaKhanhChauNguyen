<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text = "Username" GridPane.rowIndex="0" GridPane.columnIndex="0" >

    </Text>
    <TextField fx:id="username" GridPane.rowIndex="0" GridPane.columnIndex="1" >

    </TextField>
    <Text text = "Message"
          GridPane.rowIndex="1" GridPane.columnIndex="0" >

    </Text>
    <TextField fx:id="message" GridPane.rowIndex="1" GridPane.columnIndex="1" >

    </TextField>

    <Button fx:id = "deliverMessage" text = "Send" GridPane.rowIndex="2" GridPane.columnIndex="0"
            onAction="#sendMessage" >

    </Button>
    <Button fx:id = "exitClient" text = "Exit" GridPane.rowIndex="3" GridPane.columnIndex="0"
            onAction="#onExitClick">

    </Button>
</GridPane>